{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$description": "Component-specific tokens for Button component - matches Figma design",
  "button": {
    "button-background-teal": { "$value": "#12a89e", "$type": "color" },
    "button-background-readbrown": { "$value": "#562c2d", "$type": "color" },
    "button-background-navy": { "$value": "#0a152f", "$type": "color" },
    "button-background-steelblue": { "$value": "#326f9e", "$type": "color" },
    "button-background-mutedindigo": { "$value": "#545b91", "$type": "color" },
    "button-background-transparent": { "$value": "rgba(255,255,255,0)", "$type": "color" },
