    "buttons-md-height": { "$value": "32", "$type": "dimension", "unit": "px" },
    "buttons-sm-height": { "$value": "24", "$type": "dimension", "unit": "px" },
    "buttons-lg-icon-size": { "$value": "24", "$type": "dimension", "unit": "px" },
    "buttons-md-icon-size": { "$value": "20", "$type": "dimension", "unit": "px" },
