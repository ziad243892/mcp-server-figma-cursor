    "buttons-md-padding": { "$value": "12", "$type": "dimension", "unit": "px" },
    "buttons-sm-padding": { "$value": "8", "$type": "dimension", "unit": "px" },
    "buttons-lg-gap": { "$value": "4", "$type": "dimension", "unit": "px" },
    "buttons-md-gap": { "$value": "4", "$type": "dimension", "unit": "px" },
    "buttons-sm-gap": { "$value": "4", "$type": "dimension", "unit": "px" },
