{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$description": "Component-specific tokens for Card component",
  "card": {
    "background": {
      "$value": "{alias.colors.background.default}",
      "$type": "color"
    },
    "border": {
      "color": { "$value": "{alias.colors.border.default}", "$type": "color" },
      "width": { "$value": "1", "$type": "dimension", "unit": "px" },
      "radius": { "$value": "{alias.borderRadius.md}", "$type": "dimension" }
    },
    "padding": {
      "$value": "{alias.spacing.lg}",
      "$type": "dimension"
    },
    "shadow": {
      "sm": {
        "$value": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "$type": "boxShadow"
      },
      "md": {
        "$value": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "$type": "boxShadow"
      },
      "lg": {
        "$value": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
        "$type": "boxShadow"
      }
    }
  }
}

