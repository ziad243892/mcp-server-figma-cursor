{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$description": "Alias color tokens - semantic color references that point to Primitive colors",
  "colors": {
    "primary": {
      "$value": "{primitive.colors.blue.500}",
      "$type": "color",
      "description": "Primary brand color"
    },
    "primary-hover": {
      "$value": "{primitive.colors.blue.600}",
      "$type": "color",
      "description": "Primary color on hover state"
    },
    "primary-active": {
      "$value": "{primitive.colors.blue.700}",
      "$type": "color",
      "description": "Primary color on active state"
    },
    "secondary": {
      "$value": "{primitive.colors.gray.600}",
      "$type": "color",
      "description": "Secondary brand color"
    },
    "success": {
      "$value": "{primitive.colors.green.500}",
      "$type": "color",
      "description": "Success state color"
    },
    "error": {
      "$value": "{primitive.colors.red.500}",
      "$type": "color",
      "description": "Error state color"
    },
    "warning": {
      "$value": "{primitive.colors.yellow.500}",
      "$type": "color",
      "description": "Warning state color"
    },
    "text": {
      "primary": {
        "$value": "{primitive.colors.gray.900}",
        "$type": "color",
        "description": "Primary text color"
      },
      "secondary": {
        "$value": "{primitive.colors.gray.600}",
        "$type": "color",
        "description": "Secondary text color"
      },
      "tertiary": {
        "$value": "{primitive.colors.gray.400}",
        "$type": "color",
        "description": "Tertiary text color"
      },
      "inverse": {
        "$value": "{primitive.colors.white}",
        "$type": "color",
        "description": "Text color for use on dark backgrounds"
      },
      "on-primary": {
        "$value": "{primitive.colors.white}",
        "$type": "color",
        "description": "Text color for use on primary color background"
      }
    },
    "background": {
      "default": {
        "$value": "{primitive.colors.white}",
        "$type": "color",
        "description": "Default background color"
      },
      "secondary": {
        "$value": "{primitive.colors.gray.50}",
        "$type": "color",
        "description": "Secondary background color"
      },
      "tertiary": {
        "$value": "{primitive.colors.gray.100}",
        "$type": "color",
        "description": "Tertiary background color"
      }
    },
    "border": {
      "default": {
        "$value": "{primitive.colors.gray.200}",
        "$type": "color",
        "description": "Default border color"
      },
      "hover": {
        "$value": "{primitive.colors.gray.300}",
        "$type": "color",
        "description": "Border color on hover"
      },
      "focus": {
        "$value": "{primitive.colors.blue.500}",
        "$type": "color",
        "description": "Border color on focus"
      }
    }
  }
}

